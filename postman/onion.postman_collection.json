        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"1234\",\n  \"nickname\": \"OnionMaster\"\n}"
        },
        "url": {
          "raw": "http://localhost:8081/api/auth/signup",
