          "host": ["localhost"],
          "port": "8081",
          "path": ["api", "auth", "signup"]
        }
      }
    },
    {
      "name": "로그인 (JWT 저장)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "let res = pm.response.json();",
              "if (res.data && res.data.accessToken) {",
              "    pm.environment.set('token', res.data.accessToken);",
              "    console.log('JWT 토큰 저장됨:', res.data.accessToken);",
              "} else {",
              "    console.log('JWT 토큰이 응답에 없음:', res);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"1234\"\n}"
        },
        "url": {
          "raw": "http://localhost:8081/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["api", "auth", "login"]
        }
      }
    },
